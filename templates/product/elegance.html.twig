<h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Chaussures Élégance</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10">
    {% for produit in produitElegance %}
        <div class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
            <img src="{{ asset('images/' ~ produit.image) }}" alt="Chaussure {{ produit.name }}" class="w-full h-64 object-cover">
            <div class="p-4">
                <h2 class="text-xl font-bold text-gray-900">{{ produit.name }}</h2>
                <p class="text-gray-600 text-sm mt-2">
                    {{ produit.description|length > 100 ? produit.description|slice(0, 100) ~ '...' : produit.description }}
                </p>
                <div class="mt-4 flex justify-between items-center">
                    <span class="text-blue-600 font-bold text-lg">{{ produit.price }} €</span>
                </div>
            </div>  
        </div>
    {% else %}
        <p class="col-span-3 text-center text-gray-500">Aucun produit trouvé dans cette catégorie.</p>
    {% endfor %}
</div>
