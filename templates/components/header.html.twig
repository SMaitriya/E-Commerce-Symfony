<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ma Boutique</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.js"></script>
    <!-- Feather Icons -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.29.0/feather.min.js"></script>
</head>
<body>
    <header class="bg-white shadow-md">
        <div class=" max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo à gauche -->
                  <div class="">
                    <img src="images/logo.png" class="h-8 "></img>
                </div>
              
                
                <!-- Navigation au centre -->
                <div class="hidden md:flex items-center justify-center flex-1">
                    <nav class="flex space-x-20">
                        <a href="{{ path('app_home')}}" class="text-gray-600 hover:text-blue-500 font-medium">Accueil</a>
                        <a href="{{ path('app_elegance')}}" class="text-gray-600 hover:text-blue-500 font-medium">Elegance</a>
                        <a href="{{ path('app_sport')}}" class="text-gray-600 hover:text-blue-500 font-medium">Sport</a>
                    </nav>
                </div>
                
                <!-- Icônes à droite -->
<div class="flex items-center space-x-6 relative">
    <a href="{{ path('app_cart') }}" class="text-gray-600 hover:text-blue-500 flex items-center">
        <i data-feather="shopping-cart" class="h-5 w-5"></i>
        <span class="ml-1">Panier</span>
    </a>

    {% if app.user %}
        <div class="relative group">
            <button class="text-gray-600 hover:text-blue-500 flex items-center">
                <i data-feather="user" class="h-5 w-5"></i>
                <span class="ml-1">Bonjour {{ app.user.firstName }}</span>
            </button>
            <div class="absolute right-0 mt-2 w-40 bg-white rounded-md shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-50">
                <a href="{{ path('app_profile') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mon compte</a>
                <a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">Déconnexion</a>
            </div>
        </div>
    {% else %}
        <a href="{{ path('app_login') }}" class="text-gray-600 hover:text-blue-500 flex items-center">
            <i data-feather="user" class="h-5 w-5"></i>
            <span class="ml-1">Compte</span>
        </a>
    {% endif %}
</div>

    </header>
    
    <script>
        // Initialisation des icônes Feather
        feather.replace();
    </script>
</body>
</html>