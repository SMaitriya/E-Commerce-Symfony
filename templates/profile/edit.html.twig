{% extends 'base.html.twig' %}

{% block content %}
  <div class="flex justify-center mt-12">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-10">
      <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Modifier mon profil</h1>

      {{ form_start(form) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-green-500'}}) }}
            {{ form_errors(form.lastName) }}
          </div>
          <div>
            {{ form_label(form.firstName, 'Pr√©nom', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-green-500'}}) }}
            {{ form_errors(form.firstName) }}
          </div>
        </div>

        <div class="mb-6">
          {{ form_label(form.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-green-500'}}) }}
          {{ form_errors(form.email) }}
        </div>


        <div class="mb-8">
          {{ form_label(form.address, 'Adresse de livraison', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
          {{ form_widget(form.address, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-green-500'}}) }}
          {{ form_errors(form.address) }}
        </div>

        <div>
          <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 rounded-lg transition duration-200">
            Enregistrer les modifications
          </button>
        </div>

      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
