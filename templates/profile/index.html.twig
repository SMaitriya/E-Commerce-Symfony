{% extends 'base.html.twig' %}

{% block content %}
  <div class="max-w-xl mx-auto mt-10 bg-white p-8 shadow rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">Mon Profil</h1>

    {# Affichage des informations personnelles de l'utilisateur connecté #}
    <div class="space-y-4 text-gray-700">
      <p><span class="font-semibold">Nom :</span> {{ app.user.lastName }}</p>
      <p><span class="font-semibold">Prénom :</span> {{ app.user.firstName }}</p>
      <p><span class="font-semibold">Email :</span> {{ app.user.email }}</p>
      <p><span class="font-semibold">Adresse :</span> {{ app.user.address }}</p>
    </div>

    {# Lien vers la page de modification du profil utilisateur #}
    <div class="mt-8 text-center">
      <a href="{{ path('app_profile_edit') }}"
         class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium transition">
        Modifier mon profil
      </a>
    </div>
  </div>
{% endblock %}
