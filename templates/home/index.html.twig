{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}

    <!-- Hero Section -->
    <section class="bg-gray-100 text-center py-20">
        <h1 class="text-5xl font-bold text-gray-800 mb-6">
            Explorez nos chaussures
        </h1>
        <div class="mt-8 flex justify-center space-x-6">
            <a href="#" class="px-8 py-4 bg-blue-600 text-white rounded-lg text-lg hover:bg-blue-700 transition">
                Découvrir
            </a>
            <a href="#" class="px-8 py-4 bg-gray-800 text-white rounded-lg text-lg hover:bg-gray-900 transition">
                Nouveautés
            </a>
        </div>
    </section>

    <!-- Section Produits en vedette -->
    <section class="max-w-7xl mx-auto mt-16 px-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-10 text-center">
            Nos produits en vedette
        </h2>

        {% if produits is empty %}
            <div class="text-center py-12">
                <p class="text-gray-500 text-xl">Aucun produit disponible pour le moment.</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                {% for produit in produits|slice(0, 6) %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        {% if produit.image %}
                            <img src="{{ asset('images/' ~ produit.image) }}" alt="{{ produit.name }}" class="w-full h-64 object-cover">
                        {% else %}
                            <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                                <span class="text-gray-400">Image non disponible</span>
                            </div>
                        {% endif %}
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2">{{ produit.name }}</h3>
                            <p class="text-gray-600 mb-4 line-clamp-2">{{ produit.description }}</p>
                            <div class="flex justify-between items-center">
                                <span class="text-blue-600 font-bold">{{ produit.price }}€</span>
                                <a href="#" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                    Voir produit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            {% if produits|length > 6 %}
                <div class="text-center mt-12">
                    <a href="#" class="px-8 py-4 border border-blue-600 text-blue-600 rounded-lg text-lg hover:bg-blue-600 hover:text-white transition">
                        Voir tous nos produits
                    </a>
                </div>
            {% endif %}
        {% endif %}
    </section>

    <!-- Section Collections -->
    <section class="max-w-7xl mx-auto mt-24 px-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-10 text-center">
            Nos collections
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Collection Sport -->
            <div class="bg-gray-100 rounded-lg overflow-hidden shadow-md relative">
                <img src="{{ asset('images/sport-collection.jpg') }}" alt="Collection Sport" class="w-full h-80 object-cover">
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <div class="text-center">
                        <h3 class="text-white text-2xl font-bold mb-4">Collection Sport</h3>
                        <p class="text-white mb-4">Performance et confort</p>
                        <a href="#" class="px-6 py-3 bg-white text-gray-800 rounded-lg font-semibold hover:bg-gray-200 transition">
                            Découvrir
                        </a>
                    </div>
                </div>
            </div>

            <!-- Collection Classique -->
            <div class="bg-gray-100 rounded-lg overflow-hidden shadow-md relative">
                <img src="{{ asset('images/classic-collection.jpg') }}" alt="Collection Classique" class="w-full h-80 object-cover">
                <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                    <div class="text-center">
                        <h3 class="text-white text-2xl font-bold mb-4">Collection Classique</h3>
                        <p class="text-white mb-4">Élégance et raffinement</p>
                        <a href="#" class="px-6 py-3 bg-white text-gray-800 rounded-lg font-semibold hover:bg-gray-200 transition">
                            Découvrir
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Tous les produits -->
    <section class="max-w-7xl mx-auto mt-24 mb-16 px-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-10 text-center">
            Tous nos produits
        </h2>

        {% if produits is empty %}
            <div class="text-center py-12">
                <p class="text-gray-500 text-xl">Aucun produit disponible pour le moment.</p>
            </div>
        {% else %}
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for produit in produits %}
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        {% if produit.image %}
                            <img src="{{ asset('images/' ~ produit.image) }}" alt="{{ produit.name }}" class="w-full h-64 object-cover">
                        {% else %}
                            <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                                <span class="text-gray-400">Image non disponible</span>
                            </div>
                        {% endif %}
                        <div class="p-5">
                            <h3 class="text-xl font-semibold mb-2">{{ produit.name }}</h3>
                            <p class="text-gray-600 mb-4 line-clamp-2">{{ produit.description }}</p>
                            <div class="flex justify-between items-center">
                                <span class="text-blue-600 font-bold">{{ produit.price }}€</span>
                                <a href="#" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                    Voir produit
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </section>

    <!-- Section Avantages -->
    <section class="bg-gray-100 py-16">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="text-3xl font-bold text-gray-800 mb-12 text-center">
                Pourquoi nous choisir
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white p-8 rounded-lg shadow-md text-center">
                    <div class="text-blue-600 text-4xl mb-4">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Livraison rapide</h3>
                    <p class="text-gray-600">Livraison en 48h pour toutes vos commandes</p>
                </div>
                
                <div class="bg-white p-8 rounded-lg shadow-md text-center">
                    <div class="text-blue-600 text-4xl mb-4">
                        <i class="fas fa-medal"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Qualité garantie</h3>
                    <p class="text-gray-600">Des matériaux premium pour un confort optimal</p>
                </div>
                
                <div class="bg-white p-8 rounded-lg shadow-md text-center">
                    <div class="text-blue-600 text-4xl mb-4">
                        <i class="fas fa-undo"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-3">Retours gratuits</h3>
                    <p class="text-gray-600">30 jours pour changer d'avis sans frais</p>
                </div>
            </div>
        </div>
    </section>

{% endblock %}