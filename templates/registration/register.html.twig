{% extends 'base.html.twig' %}

{% block content %}
  <div class="flex justify-center mt-12">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-10">
      <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Créer un compte</h1>

      {{ form_start(registrationForm) }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <div>
            {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.lastName) }}
          </div>
          <div>
            {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.firstName) }}
          </div>
        </div>

        <div class="mb-6">
          {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
          {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
          {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-6">
          {{ form_label(registrationForm.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
          {{ form_widget(registrationForm.password, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
          {{ form_errors(registrationForm.password) }}
        </div>

        <div class="mb-8">
          {{ form_label(registrationForm.address, 'Adresse de livraison', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
          {{ form_widget(registrationForm.address, {'attr': {'class': 'w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
          {{ form_errors(registrationForm.address) }}
        </div>

        <div>
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition duration-200">
            S'inscrire
          </button>
        </div>

      {{ form_end(registrationForm) }}
    </div>
  </div>
{% endblock %}
